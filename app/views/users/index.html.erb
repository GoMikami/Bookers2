<body>
	<p id="notice"></p>
	<div class="container">
		<div class="row">
			<div class="col-md-3">
				<%= render 'information', user: current_user %>
			</div>
			
			<div class="col-md-3">
				<%= render 'books/form', book: @book %>
			</div>
			
			<div class="col-md-8 offset-md-1">
				<h2>Users</h2>
				<table class="table table-hover ">
					<thead>
						<tr>
							<th>images</th>
                			<th>name</th>
                			<th></th>
              			</tr>
            		</thead>
            		<% @users.each do |user| %>
            		<tr>
            			<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format:'jpeg',fallback: "no_image.jpg",size:"50x50"  %></td>
                		<td><%= user.name %></td>
                		<td><%= link_to "Show",user_path(user.id) %></td>
              		</tr>
            		<% end %>
          		</table>
       		</div>
</body>