<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, size: "100x100", format: "jpeg", fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block btn-sm" href="/users/<%= @user.id %>/edit">
          <i class="fas fa-user-cog"></i>
        </a>
      </div>
    <%= render "books/form", book: @book %>

<div class="col-md-8 offset-md-1">
	<h2>Books</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
			    <th>Title</th>
			    <th>Opinion</th>
				</tr>
			</thead>
			<% @books.each do |book| %>
			<tbody>
				<tr>
					<th><%= link_to user_path(@user.id) do %>
					<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
					<% end %>
					</th>
					<th><%= link_to book.title, book_path(books.id) %></th>
					<th><%= book.body %></th>
				</tr>
			</tbody>
			<% end %>
		</table>
		</div>
  </div>
</body>