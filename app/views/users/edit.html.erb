<body>
  <p id="notice"></p>
  
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_for(@user) do |f| %>
        <div class="form-group">
          <tr>Name</tr>
          <tr><%= f.text_field :name %></tr>
        </div>
        <div class="form-group">
          <tr>Image</tr>
          <tr><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></tr>
        </div>
        <div class="form-group">
          <tr>Introduction</tr>
          <tr><%= f.text_area :introduction %></tr>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  
</body>