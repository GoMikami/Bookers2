<body>
  <p id="notice"></p>
  
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
   	</ul>
  </div>
  <% end %>
  
  <div class="col-sm-3" >
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
					<th><%= @user.name %></th>
				</tr>
				<tr>
				  <th>intoroduction</th>
				  <th><%= @user.introduction %></th>
				</tr>
			</tbody>
		</table>
		
		<div class="row" >
		  <% if @user == current_user %>
		  <p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
		  <% end %>
		</div>
		  
		  <h2>New book</h2>
		  <%= form_for(@book) do |f| %>
		  <div class="field row">
		    <label for="book title">Title</label>
		    <%= f.text_field :title, class: "col-xs-12 book_title" %>
		    </div>
		    <div class="field row">
		      <label for="book option">Opinion</label>
					<%= f.text_area :body, class: "col-xs-12 book_body" %>
				</div>
				<div class="actions row">
				  <%= f.submit :"Create Book", class: "btn btn-primary col-xs-12" %>
				</div>
			<% end %>
			</div>
					
			<div class="col-xs-9" >
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
			  <thead>
			    <tr>
			      <th>Title</th>
			      <th>Opinion</th>
			      <th colspan="3"></th>
			    </tr>
			  </thead>
			  <tbody>
			    <% @books.each do |book| %>
			    <tr>
			      <td>
			        <%= link_to user_path(book.user) do %>
			        <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
					<% end %>
						</td>
						<td><%= link_to book.title, book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
		  </table>
		  
</body>
