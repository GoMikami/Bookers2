<body>
  <p id="notice"></p>

  <div class="container px-5 px-sm-0">
  	<div class="row">
  		<div class="col-md-3" >
  			<h2>User info</h2>
  			<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  			<table class="table">
  				<tbody>
  					<tr></tr>
  					<tr>
  						<th>name</th>
          				<th><%= @book.user.name %></th>
          			</tr>
          			<tr>
          				<th>intoroduction</th>
				  		<th><%= @book.user.introduction %></th>
				  	</tr>
				</tbody>
			</table>

			<div class="row">
		  	<% if @book.user == current_user %>
		  	<a class="btn btn-outline-secondary btn-block fas fa-user-cog">
		  	<%= link_to "", edit_user_path(@book.user) %>
		  	</a>
			<% end %>
			</div>

			<h2 class="mt-3">New book</h2>
			<%= form_for(@books) do |f| %>
			<div class="form-group">
		  	<label for="book title">Title</label>
		  	<%= f.text_field :title, class: "col-xs-12 book_title" %>
			</div>
			<div class="form-group">
		  	<label for="book option">Opinion</label>
		  	<%= f.text_area :body, class: "col-xs-12 book_body" %>
			</div>
			<div class="form-group">
			<%= f.submit :"Create Book", class: "btn btn-primary col-xs-12" %>
			</div>
			<% end %>
	  	</div>

	  	<div class="col-md-8 offset-md-1" >
	  		<h2>Books</h2>
	  		<table class="table table-hover table-inverse">
	  			<thead>
	  				<tr>
	  					<td>
	  						<%= link_to user_path(@book.user) do %>
	            			<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %><br><%= @book.user.name %>
	            			<% end %>
	          			</td>
						<td><%= @book.title %></td>
						<td><%= @book.body %></td>
						<% if @book.user == current_user %>
						<td><%= link_to 'Edit', edit_book_path, class: "btn-sm btn-success" %></td>
						<td><%= link_to 'Destroy',book_path, class: "btn-sm btn-danger", method: :delete,"data-confirm" => '本当に消しますか？' %></td>
						<% end %>
					</tr>
				</thead>
			</table>
	  	</div>
	</div>
  </div>
</body>
