<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <h2 class="text-danger">
          <%= @book.error.count %>error prohibited this obj from being saved:
        </h2>
        <ul class="text-danger">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="form-field">
      <%= form_with model: @book, local:true do |f| %>
      <div class="form-group">
        <%= f.label :Title, "Title" %>
        <%= f.text_field :title, class: "form-controller book_title" %>
      </div>
      <div class="form-group">
        <%= f.label :body, "Opinion" %>
        <%= f.text_area :body, class: "form-controller book_body" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Book", class: " btn btn-success" %>
        <% end %>
      </div>
      <p>
        <%= link_to "Show", book_path(@book.id) %>
        <span> | </span>
        <%= link_to "Back", book_path %>
      </p>
    </div>
  </div>
</div>